{
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "module",
        "ecmaFeatures": {
        }
    },
    "rules": {
        "indent": ["error", 4],
        "no-console": ["off"],
        "no-trailing-spaces": ["error"],
        "max-len": ["error", {
            "code": 79,
            "comments": 72
        }],
        "semi": ["error", "always"]
    },
    "env": {
        "browser": true,
        "amd": true,
        "commonjs": true,
        "mocha": true,
        "jasmine": true
    },
    "globals": {
        "sinon": true,
        "requirejs": true
    }
}
